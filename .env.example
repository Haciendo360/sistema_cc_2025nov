# Configuración de Entorno para Producción
# Copia este archivo a .env y configura los valores

# Django Settings
SECRET_KEY=tu-clave-secreta-aqui
DEBUG=False
ALLOWED_HOSTS=tu-dominio.onrender.com,localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=https://tu-dominio.onrender.com

# Database (Render PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration (Opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-aplicacion

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Legal Deadlines
PLAZO_ESTANDAR_DIAS=15
PLAZO_PRORROGA_DIAS=15
DIAS_ALERTA_URGENTE=10
